                    },
                    "body": {
                        "type": "string"
                    },
                    "extended": {
                        "type": "string"
                    },
                    "tags": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "datetime"
                    }
                }
            }
        }
    }
}
